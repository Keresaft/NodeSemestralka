<%- include('_header') %>

<h1>Create New Customer</h1>

<form action="/add-customer" method="post">
  <div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= data.name %>" required>
  </div>
  <div>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required>
  </div>
  <div>
    <label for="phone">Phone:</label>
    <input type="text" id="phone" name="phone">
  </div>
  <div>
    <label for="address">Address:</label>
    <input type="text" id="address" value="<%= data.address %>" name="address">
  </div>
  <div>
    <label for="ico">ICO:</label>
    <input type="text" id="ico" name="ico" value="<%= data.ico %>" required>
  </div>
  <div>
    <label for="dico">DICO:</label>
    <input type="text" id="dico" name="dico" value="CZ<%= data.ico %>" required>
  </div>
  <button type="submit">Add Customer</button>
</form>



<button onclick="window.location.href='/'">Back to Invoices</button>

<%- include('_footer') %>
