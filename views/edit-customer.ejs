<%- include('_header') %>

<h1>Edit Customer</h1>

<form action="/update-customer/<%= customer.id %>" method="post">
  <label for="name">Name:</label>
  <input type="text" id="name" name="name" value="<%= customer.name %>" required><br>

  <label for="email">Email:</label>
  <input type="email" id="email" name="email" value="<%= customer.email %>" required><br>

  <label for="phone">Phone:</label>
  <input type="text" id="phone" name="phone" value="<%= customer.phone %>"><br>

  <label for="address">Address:</label>
  <input type="text" id="address" name="address" value="<%= customer.address %>"><br>

  <label for="ico">ICO:</label>
  <input type="text" id="ico" name="ico" value="<%= customer.ico %>" required><br>

  <label for="dico">DICO:</label>
  <input type="text" id="dico" name="dico" value="<%= customer.dico %>" required><br>

  <button type="submit">Update Customer</button>
</form>

<a href="/all-customer">Back to Customer List</a>

<%- include('_footer') %>
