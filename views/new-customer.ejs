<%- include('_header') %>

<h1>Create New Customer</h1>

<form action="/add-customer" method="post">
  <div>
    <label for="name">Name:</label>
    <input type="text" id="name" name="name"  required>
  </div>
  <div>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required>
  </div>
  <div>
    <label for="phone">Phone:</label>
    <input type="text" id="phone" name="phone">
  </div>
  <div>
    <label for="address">Address:</label>
    <input type="text" id="address" name="address">
  </div>
  <div>
    <label for="ico">ICO:</label>
    <input type="text" id="ico" name="ico" required>
  </div>
  <div>
    <label for="dico">DICO:</label>
    <input type="text" id="dico" name="dico" required>
  </div>
  <button type="submit">Add Customer</button>
</form>

<form action="/search-customer" method="post">
  <div>
    <label for="icoSearch">Search Customer by ICO:</label>
    <input type="text" id="icoSearch" name="icoSearch" required>
    <button type="submit">Search</button>
  </div>
</form>

<button onclick="window.location.href='/'">Back to Invoices</button>

<%- include('_footer') %>